<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Control Expenses</display-name>
    <description>description</description>

    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>OneUser</servlet-name>
        <servlet-class>Show.OneUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OneUser</servlet-name>
        <url-pattern>/unusuari/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InsertData</servlet-name>
        <servlet-class>Show.InsertData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertData</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteDate</servlet-name>
        <servlet-class>Show.DeleteData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteDate</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddExpense</servlet-name>
        <servlet-class>Show.AddExpense</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddExpense</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>afegir</servlet-name>
        <jsp-file>/addexpense.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>afegir</servlet-name>
        <url-pattern>/afegir/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UnUsuari</servlet-name>
        <jsp-file>/oneuser.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnUsuari</servlet-name>
        <url-pattern>/oneuser</url-pattern>
    </servlet-mapping>

</web-app>